---
import Hamburguer from "../components/Hamburguer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="">
			<nav id="nav" class="fila" aria-label="Top"> 
			
				<div class="">
					<a href="/">
						<span class="sr-only">logo</span>
						<img
							src="public/pngtree-round-label-image_2228523.jpg"
							alt="error"
							width="40"
							height="40"
						/>
					</a>
				</div>
				<div id="links" class="">
					<a href="/" class="">Home</a>
					<a href="/about" class="">about</a>
					<a href="/sobre" class="">sobre mi</a>
					<a href="/contacto" class="">contacto</a>
				</div>
				<div id="burger"> 
					<Hamburguer /><!--  comentarios  -->
				</div>
			</nav>
			<slot />
		</header>
	</body> 
</html>  <!--sssssssss-->

<style>
	#links { 
		display: none; /*se utiliza para ocultar completamente un elemento de una p√°gina web*/
	}

	.fila {
		display: flex; /* se utiliza para establecer un contenedor flexible*/
		justify-content: space-between;/* Permite distribuir el espacio entre las filas*/
		align-items: center;/* utilizada para alinear y centrar elementos*/
	}

	@media (min-width: 768px) {
		#burger {
			display: none;
		}
	}
</style>

<script is:inline></script>
